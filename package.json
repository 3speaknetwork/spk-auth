{
  "name": "spknetwork-auth-monorepo",
  "version": "0.0.0",
  "description": "A library for authenticating with ceramic using Hive Keychain and interacting with IDX for user profile data.",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm recursive run build",
    "clean:dist": "pnpm recursive exec -- rm -rf dist",
    "clean:node_modules": "pnpm recursive exec -- rm -rf node_modules; rm shrinkwrap.yaml; rm -rf node_modules",
    "clean:all": "pnpm run clean:dist && pnpm run clean:node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3speaknetwork/spk-auth-react.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/3speaknetwork/spk-auth-react/issues"
  },
  "homepage": "https://github.com/3speaknetwork/spk-auth-react#readme",
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
